#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "Math.h"

using namespace std;

float potencia(float base, int eexponente);
float Sumatoria(float dato);
float area(float r);

void main()
{
	float r,n,i,p,b,s,Potencia,Area,Sumatoria;
	int e,opcion;
	// Menu;
	do {
		//Desplegar las opciones
		cout<<"\t\t Menu \n";
		cout<<"\t\t ==== \n";
		cout<<"1. Potencia\n";
		cout<<"2. Sumatoria\n";
		cout<<"3. Area del circulo\n";
		cout<<"0. Salir\n";
		cout<<"Opcion: ";
		cin>> opcion;
		// Condicional multiple
		switch (opcion)
		{
		case 1: cout<<"Ingrese el numero a calcular su Potencia:";
			    cin>> p;
				cout<<"ingrese base: ";
				cin>> b;
				cout<<"Ingrese exponente; ";
				cin>> e;
				Potencia= potencia (b, e);
				cout<<"La potencia es: "<<Potencia;
				break;
		case 2: cout<<"Ingrese el numero para calcular la sumatoria: ";
			    cin>> s;
				Sumatoria=s+1;
				cout<<"La sumatoria es: "<<Sumatoria;
				break;
		case 3: cout<<"Ingrese el radio: ";
			    cin>> r;
				Area=(3.14)*(r*r);
				cout<<"El area es: "<<Area;
				break;
		case 0: cout<<"Saliendo del Menu";
			    break;
		default: cout <<"ERROR de opcion";
			    break;
		}
		getch();
		system("cls");
	}while (opcion!=0);
	getch();

}

float potencia(float b, int e)
{ 
  float acum;
  acum=1;
	for (int i=1; i<=e ;i++)
		acum=acum*b;
	return acum;
 }
float Sumatoria(float dato)
{
	int s=0,i=1; 
	for (i=1; i<=dato; i++)
		s=s+i;
  return (s);

}
float area(float r)
{
	return (3.14)*(r*r);
}
